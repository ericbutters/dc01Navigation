
$('#nav').click( function() {
    $("#wall").animate({
	backgroundColor: '#080808', width: "50px"
    }, "fast");	 
    $("#nav").animate({
	backgroundColor: '#000000', width: '500px'
    }, "fast");	
    $('#wall').text("WALL");
    $('#nav').text("NAV");
    $("#nav").append("<%= escape_javascript(render(:partial => 'nav')) %>");
});

$('#wall').click( function() {
    $("#nav").animate({
	backgroundColor: '#080808', width: '50px'
    }, "fast");	 
    $("#wall").animate({
	backgroundColor: '#000000', width: "500px"
     }, "fast");
    $('#nav').text("NAV");
    $('#wall').text("WALL"); 
    $("#wall").append("<%= escape_javascript(render(:partial => 'wall')) %>");
});

